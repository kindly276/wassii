<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:background="@drawable/bg_dialogl_corner"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="14dp"
            android:textColor="@color/color_common"
            android:text="@string/st_set_time"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <tw.g35g.widget.WheelView
                android:id="@+id/day"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="match_parent" />

            <tw.g35g.widget.WheelView
                android:id="@+id/month"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="match_parent" />

            <tw.g35g.widget.WheelView
                android:id="@+id/year"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="match_parent" />

            <tw.g35g.widget.WheelView
                android:id="@+id/hour"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="wrap_content" />

            <tw.g35g.widget.WheelView
                android:id="@+id/mins"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_time"
        android:layout_marginTop="10dp"
        android:gravity="center|right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_dialog_note_ok"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="@drawable/bg_menu_item"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@string/st_ok"
            android:textColor="@color/color_common"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/btn_dialog_note_cancel"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_margin="8dp"
            android:background="@drawable/bg_menu_item"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@string/st_cancel"
            android:textColor="@color/color_common"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>