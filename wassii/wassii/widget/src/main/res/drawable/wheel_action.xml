<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#4C38FF" />
            <stroke
                android:width="3dp"
                android:color="#ADADAD" />
            <corners
                android:radius="30dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
    <item>
        <shape>
            <corners
                android:radius="30dp"
                />
            <gradient
                android:angle="270"
                android:startColor="#4C38FF"
                android:endColor="#7B81EB"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <stroke
                android:width="3dp"
                android:color="#ADADAD"
                />
        </shape>
    </item>
</selector>